{
  "name": "tms-monolithic",
  "version": "1.0.0",
  "description": "School & Teacher Data Entry System - Monolithic Architecture",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc",
    "build:frontend": "cd frontend && npm run build",
    "start": "node dist/index.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "install:all": "npm install && cd frontend && npm install",
    "db:seed": "ts-node --transpile-only prisma/seed.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:api": "jest __tests__/api",
    "test:integration": "jest __tests__/integration",
    "test:all": "npm run test && npm run e2e",
    "test:setup": "node scripts/setup-test-db-simple.js",
    "test:clean": "node scripts/clean-test-db.js",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "@sentry/node": "^10.9.0",
    "@sentry/profiling-node": "^10.9.0",
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^6.0.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "mysql2": "^3.6.5",
    "pino": "^9.9.1",
    "pino-http": "^10.5.0",
    "prisma": "^6.15.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/mysql": "^2.15.27",
    "@types/node": "^20.10.0",
    "@types/supertest": "^6.0.3",
    "concurrently": "^8.2.2",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "keywords": [
    "school",
    "teacher",
    "crud",
    "typescript",
    "mysql",
    "vue",
    "monolithic"
  ],
  "author": "TMS Team",
  "license": "MIT"
}
